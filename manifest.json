{
  "manifest_version": "0.2",
  "name": "mcp_excel",
  "version": "1.0.0",
  "description": "Excel server for processing Excel files",
  "author": {
    "name": "LuiccianDev",
    "email": "LuiccianDev@gmail.com",
    "url": "https://github.com/LuiccianDev/mcp_excel_office"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LuiccianDev/mcp_excel_office"
  },
  "homepage": "https://github.com/LuiccianDev",
  "documentation": "https://github.com/LuiccianDev/mcp_excel_office/blob/master/README.md",
  "support": "https://github.com/LuiccianDev/mcp_excel_office/issues",
  "server": {
    "type": "python",
    "entry_point": "src/mcp_excel/server.py",
    "mcp_config": {
      "command": "uv",
      "args": ["--directory",
        "${__dirname}",
        "run",
        "src/mcp_excel/server.py"
      ],
      "env": {
        "DIRECTORY": "${user_config.directory}"
      }
    }
  },
  "tools_generated": true,
  "user_config": {
    "directory": {
      "type": "directory",
      "title": "Directory",
      "description": "Directory for files",
      "required": true,
      "sensitive": false
    }
  },
  "keywords": [
    "mcp",
    "ia",
    "automation",
    "productivity",
    "excel",
    "office",
    "xlsx"
  ],
  "compatibility": {
    "platforms": [
      "win32"
    ]
  },
  "license": "MIT"
}
